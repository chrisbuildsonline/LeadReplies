# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# AI API Configuration
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-key-here
DEEPSEEK_API_KEY=sk-your-deepseek-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# Database Configuration (PostgreSQL)
DB_HOST=postgres
DB_NAME=reddit_leads
DB_USER=postgres
DB_PASSWORD=your-secure-database-password-here
DB_PORT=5432
DATABASE_URL=postgresql://postgres:your-password@postgres:5432/reddit_leads

# Application URLs and Ports
BACKEND_PORT=8001
FRONTEND_PORT=3000
BACKEND_URL=http://backend:8001
FRONTEND_URL=http://frontend:3000

# JWT Security
JWT_SECRET=your-very-secure-jwt-secret-key-change-this-in-production

# Background Service Configuration
SCRAPING_INTERVAL_MINUTES=120

# Optional: Reddit API (for enhanced scraping)
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=Chrome

# Optional: OpenRouter (alternative to Anthropic)
OPENROUTER_KEY=sk-or-v1-your-openrouter-key-here

# Production Settings
NODE_ENV=production
PYTHONPATH=/app