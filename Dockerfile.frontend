FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install dependencies first for better caching
COPY frontend/package*.json ./
RUN npm install

# Copy source code
COPY frontend/ ./

# Build the application
RUN npm run build

# Expose port
EXPOSE 3050

# Set environment variables
ENV NODE_ENV=production
ENV PORT=3050

# Start the application
CMD ["npm", "start"]